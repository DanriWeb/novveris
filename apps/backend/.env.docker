# Backend Server Configuration
PORT=8000

# CORS Origins (comma-separated)
# localhost:3001 - браузер (frontend в Docker)
# localhost:3000 - браузер (frontend dev-сервер)
# host.docker.internal:3001 - запросы из других Docker-контейнеров
CORS_ORIGINS=http://localhost:3001,http://localhost:3000,http://host.docker.internal:3001

# Database Configuration
DATABASE_HOST=host.docker.internal
DATABASE_PORT=5432
DATABASE_NAME=novveris
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Node Environment
NODE_ENV=production
